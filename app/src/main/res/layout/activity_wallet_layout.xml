<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cccccc">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/wallet_detailed_bg">

        <TextView
            android:id="@+id/personal_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#cccccc"
            android:text="个人账号:200人民币"/>

        <TextView
            android:id="@+id/gift_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_account"
            android:layout_marginTop="10dp"
            android:textColor="#cccccc"
            android:text="赠送账号:80人民币"/>

        <TextView
            android:id="@+id/total"
            android:layout_below="@id/gift_account"
            android:layout_marginTop="40dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#cccccc"
            android:text="总额:280人民币"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="10dp">
        <TextView
            android:id="@+id/withdrawals"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="提现"
            android:textColor="#ffffff"
            android:background="#cccccc"/>
        <TextView
            android:id="@+id/recharge"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="充值"
            android:textColor="#ffffff"
            android:background="#333399"/>
    </LinearLayout>

</LinearLayout>
